{
  "name": "@yellow-plugins/infrastructure",
  "version": "1.1.0",
  "description": "Infrastructure layer - external dependencies and adapters for plugin marketplace",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@yellow-plugins/domain": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/semver": "^7.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0 <=24.x"
  }
}
