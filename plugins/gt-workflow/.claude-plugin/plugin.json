{
  "name": "gt-workflow",
  "version": "1.1.0",
  "description": "Graphite-native workflow commands for stacked PR development. Provides smart commit-and-submit with parallel audit agents, stack planning, sync, and navigation â€” all through the gt CLI.",
  "author": {
    "name": "KingInYellows",
    "url": "https://github.com/KingInYellows"
  },
  "homepage": "https://github.com/KingInYellows/yellow-plugins/tree/main/plugins/gt-workflow",
  "repository": "https://github.com/KingInYellows/yellow-plugins",
  "license": "MIT",
  "keywords": [
    "graphite",
    "graphite-cli",
    "gt",
    "git",
    "stacked-prs",
    "smart-commits",
    "sync",
    "conventional-commits",
    "workflow",
    "pull-requests"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/check-git-push.sh",
            "timeout": 1
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/check-commit-message.sh",
            "timeout": 1
          }
        ]
      }
    ]
  }
}
