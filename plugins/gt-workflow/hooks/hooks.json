{
  "_comment": "REFERENCE ONLY â€” not loaded by Claude Code. Authoritative hook config is in .claude-plugin/plugin.json. Keep in sync manually or delete.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/check-git-push.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/check-commit-message.sh",
            "timeout": 1
          }
        ]
      }
    ]
  }
}
